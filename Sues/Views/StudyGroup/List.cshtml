@model Sues.Models.StudyGroup.StudyGroupListModel
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Scripts/myStyle.css" rel="stylesheet" />
<style type="text/css">
    .rt-table-col-two-actions {
        width: 270px;
    }    
</style>
<h1>Учебные группы</h1>
@if (Model.Items != null && Model.Items.Count() > 0)
{
<table class="table table-striped table-hover table-bordered rt-table">
    <thead>
        <tr>
            <th class="rt-table-col-id">ID</th>
            <th>Наименование</th>
            <th>Преподаватель</th>
            <th class="rt-table-col-id">Количество студентов</th>
            <th class="rt-table-col-two-actions"> </th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td class="rt-table-col-id">@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.TeacherName</td>
                    <td class="rt-table-col-id">@item.CountOfStudents</td>
                    <td class="rt-table-col-two-actions">
                    @Html.ActionLink("Редактирование", "Edit", "StudyGroup", new { id = item.Id, ReturnUrl = Request.RawUrl }, new {@class= "btn btn-edit" })
                    @Html.ActionLink("Удалить", "Delete", "StudyGroup", new { id = item.Id }, new { @class = "btn btn-delete", @onclick = "if(!confirm('Вы уверены, что хотите удалить элемент?')) { return false; }" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>@Html.ActionLink("Создать", "Create", new {ReturnUrl = Request.RawUrl }, new { @class= "btn btn-primary" })</div>
    }
 else
{
    <h3>
        Записей не найдено
    </h3>
}