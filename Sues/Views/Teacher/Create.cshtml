@model Sues.Models.Teacher.TeacherEditModel
@{ 
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Scripts/myStyle.css" rel="stylesheet" />
<h2>Добавить преподавателя</h2>

<div class="row tabbable">
    <div class="@MyStyles.FormColumn">
        @using (Html.BeginForm("Create", "Teacher", FormMethod.Post, new { @class = "form-horizontal", }))
        {
            <input type="hidden" id="ReturnUrl" name="ReturnUrl" value="@Model.ReturnUrl" />
            <fieldset>
                <div class="form-group">
                    <label class="@MyStyles.FormLabel">ФИО:<br /><span style="color:red; font-size: 12px">@Html.ValidationMessageFor(x => x.Name)</span></label>
                    <div class="@MyStyles.FormControl">@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })</div>
                </div>

                <div class="form-group">
                    <label class="@MyStyles.FormLabel">Email:<br /><span style="color:red; font-size: 12px">@Html.ValidationMessageFor(x => x.Email)</span></label>
                    <div class="@MyStyles.FormControl">@Html.TextBoxFor(x => x.Email, new { @class = "form-control" })</div>
                </div>

                <div class="form-group">
                    <div class="@MyStyles.FormLabel"></div>
                    <div class="@MyStyles.FormControl">
                        <input type="submit" value="Сохранить" class="btn btn-primary" />
                        <a href="@Model.ReturnUrl" class="btn btn-default">Отмена</a>
                    </div>
                </div>
            </fieldset>
        }
        </div>
    </div>
